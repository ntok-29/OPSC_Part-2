                android:endX="12"
                android:endY="20"
                android:startColor="#FF5722"
                android:endColor="#FFC107"
                android:tileMode="clamp"/>
        </aapt:attr>
    </path>

    <!-- Door -->
    <path
        android:fillColor="#4CAF50"
        android:pathData="M10,20v-6h4v6z" />
