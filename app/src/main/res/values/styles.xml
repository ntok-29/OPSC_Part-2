<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Example custom text appearance style -->
    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="ShapeAppearance.MaterialComponents.TextInputLayout.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.TextInputLayout.Rounded</item>
    </style>
</resources>
